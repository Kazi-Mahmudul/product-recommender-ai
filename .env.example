# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Application Settings
DEBUG=True
LOG_LEVEL=DEBUG
PROJECT_NAME=PickBD
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
LOCAL_DATABASE_URL=postgresql://username:password@localhost:5432/local_database_name

# CORS Settings (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# Redis Cache Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password
REDIS_ENABLED=True

# External Services
GEMINI_SERVICE_URL=http://localhost:3001

# Authentication
SECRET_KEY=your-very-secure-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
VERIFICATION_CODE_EXPIRE_MINUTES=10

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password_or_app_password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_USE_TLS=True

# Monitoring
MONITORING_API_KEY=your_monitoring_api_key

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1
HTTPS_ENABLED=false
ENVIRONMENT=development